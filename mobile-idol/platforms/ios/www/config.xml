<?xml version='1.0' encoding='utf-8'?>
<widget id="com.guidecreative.mobile-idol" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>MobileIdol</name>
    <description>
        It's time for you to become the next Mobile Idol!
    </description>
    <author email="developers@guidecreative.com" href="http://guidecreative.com">
        Guide Creative
    </author>
    
    <feature name="Media">
        <param name="ios-package" value="CDVSound" />
    </feature>
    <feature name="Notification">
        <param name="ios-package" value="CDVNotification" />
    </feature>
    <feature name="Camera">
        <param name="ios-package" value="CDVCamera" />
    </feature>
    <feature name="Capture">
        <param name="ios-package" value="CDVCapture" />
    </feature>
    <feature name="InAppBrowser">
        <param name="ios-package" value="CDVInAppBrowser" />
    </feature>
    <feature name="File">
        <param name="ios-package" value="CDVFile" />
    </feature>
    <feature name="FileTransfer">
        <param name="ios-package" value="CDVFileTransfer" />
    </feature>

    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="OpenAllWhitelistURLsInWebView" value="true" />
    <access origin="*" subdomains="true" />

    <icon src="images/iPhoneIcon_Big.png.png" />
</widget>
